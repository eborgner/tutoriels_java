<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import commun_javafx.BoutonAnime?>
<?import commun_javafx.BoutonDessine?>

<VBox xmlns:fx="http://javafx.com/fxml" alignment="center" styleClass="conteneurPrincipal">

	<VBox styleClass="conteneurVertical" VBox.vgrow="always">
		<Text text="%taillePartie"/>
		<HBox styleClass="conteneurHorizontal" VBox.vgrow="always">
			<VBox styleClass="conteneurVertical, groupeDeControles" HBox.hgrow="always">

				<HBox styleClass="conteneurHorizontal">
					<Text text="%petite"/>
					<HBox styleClass="espaceHorizontal,largeurInfinie" HBox.hgrow="sometimes"/>
					<CheckBox/>
				</HBox>

				<HBox styleClass="espaceVertical,petiteHauteur" VBox.vgrow="always"/>

				<HBox styleClass="conteneurHorizontal">
					<Text text="%moyenne"/>
					<HBox styleClass="espaceHorizontal,largeurInfinie" HBox.hgrow="sometimes"/>
					<CheckBox/>
				</HBox>

				<HBox styleClass="espaceVertical,petiteHauteur" VBox.vgrow="always"/>

				<HBox styleClass="conteneurHorizontal">
					<Text text="%grande"/>
					<HBox styleClass="espaceHorizontal,largeurInfinie" HBox.hgrow="sometimes"/>
					<CheckBox/>
				</HBox>
			</VBox>
		</HBox>
	</VBox>

	<HBox styleClass="espaceVertical,petiteHauteur" VBox.vgrow="always"/>

	<HBox styleClass="conteneurHorizontal" alignment="center_right">


		<BoutonAnime styleClass="bouton" text="%annuler"/>


		<HBox styleClass="espaceHorizontal,petiteLargeur" HBox.hgrow="always"/>

		<BoutonDessine styleClass="bouton" text="%ok"/>

	</HBox>

</VBox>
