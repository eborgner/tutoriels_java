<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import commun_javafx.controles.ImageAjustable?>

<VBox xmlns:fx="http://javafx.com/fxml" styleClass="conteneurPrincipal">
    <HBox styleClass="conteneurNomsJoueurs" VBox.vgrow="SOMETIMES">
            <HBox styleClass="conteneurNomJoueur" HBox.hgrow="ALWAYS">
                <Text styleClass="nomJoueur" text="%joueurUn"></Text>
            </HBox>
            <HBox styleClass="conteneurNomJoueur" HBox.hgrow="ALWAYS">
                <Text styleClass="nomJoueur" text="%joueurDeux"></Text>
            </HBox>
    </HBox>
    <VBox styleClass="conteneurTableJeu" VBox.vgrow="ALWAYS">
        <HBox styleClass="conteneurBoutons" VBox.vgrow="SOMETIMES">
            <HBox styleClass="conteneurBouton" HBox.hgrow="ALWAYS">
                <Button styleClass="boutonCoup" text="↡"/>
            </HBox>
            <HBox styleClass="conteneurBouton" HBox.hgrow="ALWAYS">
                <Button styleClass="boutonCoup" text="↡"/>
            </HBox>
            <HBox styleClass="conteneurBouton" HBox.hgrow="ALWAYS">
                <Button styleClass="boutonCoup" text="↡"/>
            </HBox>
        </HBox>
        <VBox styleClass="conteneurGrille" VBox.vgrow="ALWAYS">
            <HBox styleClass="conteneurLigne" VBox.vgrow="ALWAYS">
                <ImageAjustable url="/images/VIDE.png" styleClass="conteneurCase" HBox.hgrow="ALWAYS"/>
                <ImageAjustable url="/images/VIDE.png" styleClass="conteneurCase" HBox.hgrow="ALWAYS"/>
                <ImageAjustable url="/images/VIDE.png" styleClass="conteneurCase" HBox.hgrow="ALWAYS"/>
            </HBox>
            <HBox styleClass="conteneurLigne" VBox.vgrow="ALWAYS">
                <ImageAjustable url="/images/VIDE.png" styleClass="conteneurCase" HBox.hgrow="ALWAYS"/>
                <ImageAjustable url="/images/VIDE.png" styleClass="conteneurCase" HBox.hgrow="ALWAYS"/>
                <ImageAjustable url="/images/VIDE.png" styleClass="conteneurCase" HBox.hgrow="ALWAYS"/>
            </HBox>
            <HBox styleClass="conteneurLigne" VBox.vgrow="ALWAYS">
                <ImageAjustable url="/images/VIDE.png" styleClass="conteneurCase" HBox.hgrow="ALWAYS"/>
                <ImageAjustable url="/images/VIDE.png" styleClass="conteneurCase" HBox.hgrow="ALWAYS"/>
                <ImageAjustable url="/images/VIDE.png" styleClass="conteneurCase" HBox.hgrow="ALWAYS"/>
            </HBox>
        </VBox>
    </VBox>
</VBox>
