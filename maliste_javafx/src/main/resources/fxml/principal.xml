<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import maliste_javafx.vues.composants.ConteneurItems?>

<HBox xmlns:fx="http://javafx.com/fxml"
    id="conteneurPrincipal"
    fx:controller="maliste_javafx.vues.VuePrincipaleFX">

    <HBox styleClass="grosEspace"/>

    <VBox id="conteneurInterne">

        <VBox styleClass="grosEspace"/>

        <HBox id="conteneurNouvelleListe">
            <HBox styleClass="petitEspace"/>
            <TextField id="texteNouvelItem" fx:id="texteNouvelItem"/>
            <HBox styleClass="petitEspace"/>
            <Button id="boutonNouvelItem" fx:id="boutonNouvelItem" text="%nouvelItem"/>
            <HBox styleClass="petitEspace"/>
        </HBox>

        <VBox styleClass="grosEspace"/>

        <ConteneurItems id="conteneurItems"
              fx:id="conteneurItems"/>

        <VBox styleClass="grosEspace"/>

    </VBox>

    <HBox styleClass="grosEspace"/>

</HBox>
