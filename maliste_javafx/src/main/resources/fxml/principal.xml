<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import maliste_javafx.vues.composants.ConteneurItems?>

<HBox xmlns:fx="http://javafx.com/fxml"
    id="conteneurPrincipal"
    fx:controller="maliste_javafx.vues.VuePrincipaleFX">

    <HBox styleClass="grosEspace conteneurSeparateur" HBox.hgrow="ALWAYS">

        <HBox styleClass="separateur" HBox.hgrow="ALWAYS"/>

    </HBox>

    <VBox id="conteneurInterne" HBox.hgrow="ALWAYS">

        <VBox styleClass="grosEspace" VBox.vgrow="ALWAYS"/>

        <HBox id="conteneurNouvelleListe" VBox.vgrow="ALWAYS">
            <HBox styleClass="petitEspace" HBox.hgrow="ALWAYS"/>
            <TextField id="texteNouvelItem" fx:id="texteNouvelItem"/>
            <HBox styleClass="petitEspace" HBox.hgrow="ALWAYS"/>
            <Button id="boutonNouvelItem" fx:id="boutonNouvelItem" text="%nouvelItem"/>
            <HBox styleClass="petitEspace" HBox.hgrow="ALWAYS"/>
        </HBox>

        <VBox styleClass="grosEspace" VBox.vgrow="ALWAYS"/>

        <ConteneurItems id="conteneurItems" 
                        VBox.vgrow="ALWAYS"
                        fx:id="conteneurItems"/>

        <VBox styleClass="grosEspace" VBox.vgrow="ALWAYS"/>

    </VBox>

    <HBox styleClass="grosEspace" HBox.hgrow="ALWAYS"/>

</HBox>
