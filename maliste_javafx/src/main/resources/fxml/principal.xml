<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import maliste_javafx.vues.composants.ConteneurItems?>

<HBox xmlns:fx="http://javafx.com/fxml"
    id="conteneurPrincipal"
    fx:controller="maliste_javafx.vues.VuePrincipaleFX">

    <Pane styleClass="grosEspace" HBox.hgrow="ALWAYS" />

    <VBox id="conteneurInterne" HBox.hgrow="ALWAYS">

        <Pane styleClass="grosEspace" VBox.vgrow="ALWAYS"/>

        <HBox id="conteneurNouvelleListe">
            <TextField id="texteNouvelItem" fx:id="texteNouvelItem" HBox.hgrow="ALWAYS"/>
            <HBox styleClass="petitEspace" HBox.hgrow="ALWAYS"/>
            <Button id="boutonNouvelItem" fx:id="boutonNouvelItem" text="%nouvelItem"/>
        </HBox>

        <Pane styleClass="petitEspace" VBox.vgrow="ALWAYS"/>
        <Pane styleClass="separateur" VBox.vgrow="ALWAYS"/>
        <Pane styleClass="petitEspace" VBox.vgrow="ALWAYS"/>

        <ConteneurItems id="conteneurItems" 
                        VBox.vgrow="ALWAYS"
                        fx:id="conteneurItems"/>

        <Pane styleClass="grosEspace" VBox.vgrow="ALWAYS"/>

    </VBox>

    <Pane styleClass="grosEspace" HBox.hgrow="ALWAYS"/>

</HBox>
