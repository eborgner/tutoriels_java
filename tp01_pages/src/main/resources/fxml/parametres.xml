<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import tp01_pages_javafx.vues.composants.MonRadio?>

<VBox xmlns:fx="http://javafx.com/fxml" 
    alignment="center"
    styleClass="conteneurPrincipal"
    fx:controller="tp01_pages_javafx.vues.VueParametresFX"
    VBox.vgrow="ALWAYS">

	<VBox VBox.vgrow="ALWAYS"/>
		
	<Text fx:id="texteTmpParametres" text="%afaire"/>

	<VBox VBox.vgrow="ALWAYS"/>

	<HBox VBox.vgrow="ALWAYS">
		<HBox HBox.hgrow="ALWAYS"/>
		<HBox HBox.hgrow="ALWAYS"  styleClass="conteneurTexte" >
			<Text text="%UN"/>
			<MonRadio fx:id="radioUn" HBox.hgrow="ALWAYS" />
		</HBox>
		<HBox HBox.hgrow="ALWAYS"  styleClass="conteneurTexte" >
			<Text text="%DEUX"/>
			<MonRadio fx:id="radioDeux" HBox.hgrow="ALWAYS" />
		</HBox>
		<HBox HBox.hgrow="ALWAYS" styleClass="conteneurTexte" >
			<Text text="%TROIS"/>
			<MonRadio fx:id="radioTrois" HBox.hgrow="ALWAYS"/>
		</HBox>
		<HBox HBox.hgrow="ALWAYS"/>
	</HBox>

	<VBox VBox.vgrow="ALWAYS"/>

    <HBox VBox.vgrow="ALWAYS" alignment="center">
        <Button fx:id="boutonChangerLangue" text="%changerLangue"/>
        <Pane styleClass="petitEspace" HBox.hgrow="ALWAYS"/>
        <Button fx:id="boutonRetour" text="%boutonOk"/>
    </HBox>

	<VBox VBox.vgrow="ALWAYS"/>
</VBox>
