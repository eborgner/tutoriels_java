<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<?import tp01_temps_reel_javafx.vues.composants.MonDessin2D?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      styleClass="conteneurPrincipal" 
      fx:controller="tp01_temps_reel_javafx.vues.VuePartieLocaleFX"
      VBox.vgrow="ALWAYS">

    <Text fx:id="texteTmpPartieLocale" text="%afaire"/>
    <Pane styleClass="petitEspace" VBox.vgrow="SOMETIMES"/>
    <Button fx:id="boutonJouerCoup" text="%boutonJouerCoup"/>
    <Pane styleClass="petitEspace" VBox.vgrow="SOMETIMES"/>
    <HBox alignment="center">
    	<Text text="%nombreCoups"/>
    	<Text fx:id="texteNombreCoups"/>
	</HBox>
    <Pane styleClass="petitEspace" VBox.vgrow="SOMETIMES"/>
    <MonDessin2D fx:id="dessin2D" styleClass="tableJeu" VBox.vgrow="ALWAYS"/>
    <Pane styleClass="petitEspace" VBox.vgrow="SOMETIMES"/>

</VBox>
