<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.*?>
<?import javafx.scene.text.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
    fx:controller="pong_javafx.vues.VuePrincipaleFX" styleClass="fenetrePrincipale">
    <BorderPane VBox.vgrow="ALWAYS">
        <top>
            <MenuBar>
                <menus>
                <Menu styleClass="menu" text="%partieLocale">
                    <items>
                    <MenuItem fx:id="nouvellePartie" styleClass="menu_item" text="%nouvellePartie"/>
                    <MenuItem fx:id="parametres" styleClass="menu_item" text="%parametres"/>
                    <SeparatorMenuItem/>
                    <MenuItem fx:id="quitter" styleClass="menu_item" text="%quitter"/>
                    </items>
                </Menu>
            </menus>
            </MenuBar>
        </top>
        <center>
        <HBox alignment="center">
			<VBox fx:id="conteneurPartieLocale" visible="false" alignment="center"/>
			<VBox fx:id="conteneurPartieReseau" visible="false" alignment="center"/>
			</HBox>
        </center>
    </BorderPane>
</VBox>
