<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.*?>
<?import javafx.scene.text.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
    fx:controller="tp01_une_page_javafx.vues.VueAccueilFX" 
    styleClass="fenetrePrincipale"
    alignment="center">
    <HBox VBox.vgrow="ALWAYS">
        <VBox fx:id="conteneurPartie" alignment="center" HBox.hgrow="ALWAYS"/>
        <VBox fx:id="conteneurParametres" alignment="center" HBox.hgrow="ALWAYS"/>
    </HBox>
    <Pane styleClass="petitEspace" VBox.vgrow="ALWAYS"/>
    <Button fx:id="boutonNouvellePartie" styleClass="bouton" text="%nouvellePartie"/>
</VBox>
